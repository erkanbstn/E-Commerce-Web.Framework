@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "MainCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h3 style="margin-left:15px">KATEGORİ LİSTESİ</h3>
<br />
<table class="table table-hover"style="margin-left:15px">

    <tr>
        <th>ID</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.CategoryID
            </td>
            <td>
                @item.CategoryName
            </td>
            <td>
                <a href="~/Category/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a>

            </td>
            <td>
                <a href="~/Category/UpdateCategory/@item.CategoryID" class="btn btn-warning">Düzenle</a>

            </td>
        </tr>
    }
</table>
<a href="~/Category/AddCategory" style="margin-left:15px" class="btn btn-primary">Yeni Kategori Ekle</a>

