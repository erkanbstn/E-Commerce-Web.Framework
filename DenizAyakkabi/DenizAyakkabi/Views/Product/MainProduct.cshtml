@using EntityLayer.Concrete
@model List<Product>
@{
    ViewBag.Title = "MainProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h3 style="margin-left:15px">ÜRÜN LİSTESİ</h3>
<br />
<table style="margin-left:15px" class="table table-hover">

    <tr>
        <th>ID</th>
        <th>Baslık</th>
        <th>Acıklama</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Resim</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @item.ProductID
    </td>
    <td>
        @item.Title
    </td>
    <td>
        @item.Description
    </td>
    <td>
        @item.Price
    </td>
    <td>
        @item.Quantity
    </td>
    <td>
        <img src="Images/@item.Image" height="70" width="90" alt="Images/@item.Image">
    </td>
    <td>
        <a href="~/Product/DeleteProduct/@item.ProductID" class="btn btn-danger">Sil</a>

    </td>
    <td>
        <a href="~/Product/UpdateProduct/@item.ProductID" class="btn btn-warning">Düzenle</a>

    </td>
</tr>
    }
</table>
<a href="~/Product/AddProduct" style="margin-left:15px" class="btn btn-primary">Yeni Ürün Ekle</a>

