@model EntityLayer.Concrete.Product
@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h2 style="margin-left:15px">Ürün Düzenleme Sayfası</h2>
<br />
@using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

<div style="margin-left:15px" class="form-group">
    @Html.Label("ID")
    @Html.TextBoxFor(n => n.ProductID, new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(n => n.Title, new { @class = "form-control" })
    @Html.ValidationMessageFor(n => n.Title)
    <br />
    <br />
    @Html.Label("Ürün Açıklaması")
    @Html.TextBoxFor(n => n.Description, new { @class = "form-control" })
    @Html.ValidationMessageFor(n => n.Description)
    <br />
    <br />
    @Html.Label("Ürün Fiyatı")
    @Html.TextBoxFor(n => n.Price, new { @class = "form-control" })
    @Html.ValidationMessageFor(n => n.Price)
    <br />
    <br />
    @Html.Label("Ürün Adeti")
    @Html.TextBoxFor(n => n.Quantity, new { @class = "form-control" })
    @Html.ValidationMessageFor(n => n.Quantity)
    <br />
    <br />
    @Html.Label("Ürün Alt Kategorisi")
    @Html.DropDownListFor(n => n.SubCategory, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    <br />
    <br />
    <input class="form-control" type="file" name="file" />
    <br />
    <br />
    <button class="btn btn-primary">Kaydet</button>
</div>
}

