@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewBag.Title = "MainContact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h3 style="margin-left:15px">ILETISIM LİSTESİ</h3>
<br />
<table class="table table-hover" style="margin-left:15px">

    <tr>
        <th>ID</th>
        <th>Gönderen</th>
        <th>Email</th>
        <th>Konu</th>
        <th>Mesaj</th>
        <th>Sil</th>
        <th>Görüntüle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.ContactID
            </td>
            <td>
                @item.FullName
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.Subject
            </td>
            <td>
                @item.Message
            </td>
            <td>
                <a href="~/Contact/DeleteContact/@item.ContactID" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="~/Contact/ViewContact/@item.ContactID" class="btn btn-warning">Görüntüle</a>

            </td>
        </tr>
    }
</table>

